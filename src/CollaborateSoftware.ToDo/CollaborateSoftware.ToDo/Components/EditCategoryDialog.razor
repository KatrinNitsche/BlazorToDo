@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">ToDo List Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Category" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="title">Title: </label>
                            <InputText id="title" class="form-control" @bind-Value="@Category.Name" placeholder="Enter a title for the task"></InputText>
                            <ValidationMessage For="@(() => Category.Name)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Colour: </label>
                            <input type="color" class="form-control" @bind-value="@Category.Color" />
                            <ValidationMessage For="@(() => Category.Description)" />
                        </div>

                        <div class="form-group">
                            <label for="title">Icon: </label>
                            <InputText id="title" class="form-control" @bind-Value="@Category.Icon" placeholder="Enter an icon name for the task"></InputText>
                            <ValidationMessage For="@(() => Category.Icon)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Description: </label>
                            <InputTextArea id="description" class="form-control" @bind-Value="@Category.Description" rows="5"></InputTextArea>
                            <ValidationMessage For="@(() => Category.Description)" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save Task</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
