@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">ToDo List Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@BudgetEntry" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="description">Description: </label>
                            <InputText id="description" class="form-control" @bind-Value="@BudgetEntry.Description" placeholder="Enter a description for the entry"></InputText>
                            <ValidationMessage For="@(() => BudgetEntry.Description)" />
                        </div>

                        <div class="form-group">
                            <label for="date">Date: </label>
                            <InputDate id="date" class="form-control" @bind-Value="@BudgetEntry.BudgetDate"></InputDate>
                            <ValidationMessage For="@(() => BudgetEntry.BudgetDate)" />
                        </div>

                        <div class="form-group">
                            <label for="Category">Category: </label>
                            <InputSelect id="Category" class="form-control" @bind-Value="@CurrentCategoryId">
                                @foreach (var category in CategoryList)
                                    {
                                    <option value="@category.Id">@category.Name</option>
                                    }
                            </InputSelect>
                            <ValidationMessage For="@(() => BudgetEntry.Category)" />
                        </div>

                        <div class="form-group">
                            <label for="amount">Amount: </label>
                            <InputNumber id="amount" class="form-control" @bind-Value="@BudgetEntry.Amount"></InputNumber>
                            <ValidationMessage For="@(() => BudgetEntry.Amount)" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}