@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">ToDo List Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@AppointmentEntry" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="title">Title: </label>
                            <InputText id="title" class="form-control" @bind-Value="@AppointmentEntry.Title" placeholder="Enter a title for the task"></InputText>
                            <ValidationMessage For="@(() => AppointmentEntry.Title)" />
                        </div>

                        <div class="form-group">
                            <label for="date">Date: </label>
                            <InputDate id="date" class="form-control" @bind-Value="@AppointmentEntry.Date"></InputDate>
                            <input type="text" class="form-control" @bind-value="@Time" placeholder="hh:mm" />
                            <ValidationMessage For="@(() => AppointmentEntry.Date)" />
                        </div>

                        <div class="form-group">
                            <label for="Priority">Priority: </label>
                            <InputSelect id="Priority" class="form-control" @bind-Value="@AppointmentEntry.Priority">
                                <option value="Low">Low</option>
                                <option value="Middle">Middle</option>
                                <option value="High">High</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => AppointmentEntry.Priority)" />
                        </div>
                               
                        <div class="form-group">
                            <label for="Category">Category: </label>
                            <InputSelect id="Category" class="form-control" @bind-Value="@CurrentCategoryId">
                                @foreach (var category in CategoryList)
                                    {
                                    <option value="@category.Id">@category.Name</option>
                                    }
                            </InputSelect>
                            <ValidationMessage For="@(() => AppointmentEntry.Category)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Description: </label>
                            <InputTextArea id="description" class="form-control" @bind-Value="@AppointmentEntry.Description" rows="5"></InputTextArea>
                            <ValidationMessage For="@(() => AppointmentEntry.Description)" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save Task</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
