@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Export Notes</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@PdfNotesSettings" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="title">Title: </label>
                            <InputText id="title" class="form-control" @bind-Value="@PdfNotesSettings.NotesTitle" placeholder="Enter a title for the task"></InputText>
                            <ValidationMessage For="@(() => PdfNotesSettings.NotesTitle)" />
                        </div>

                        <div class="form-group">
                            <label for="Category">Category: </label>
                            <InputSelect id="Category" class="form-control" @bind-Value="@PdfNotesSettings.CategoryId">
                                <option value="All">All</option>
                                @foreach (var category in CategoryList)
                                    {
                                    <option value="@category.Id">@category.Name</option>
                                    }
                            </InputSelect>
                        </div>

                        <button type="submit" class="btn btn-primary">Export</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}

