@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">ToDo List Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@ToDoListEntry" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="title">Title: </label>
                            <InputText id="title" class="form-control" @bind-Value="@ToDoListEntry.Title" placeholder="Enter a title for the task"></InputText>
                            <ValidationMessage For="@(() => ToDoListEntry.Title)" />
                        </div>

                        <div class="form-group">
                            <label for="date">Date: </label>
                            <InputDate id="date" class="form-control" @bind-Value="@ToDoListEntry.Date"></InputDate>
                            <ValidationMessage For="@(() => ToDoListEntry.Date)" />
                        </div>

                        <div class="form-group">
                            <label for="date">Priority: </label>
                            <InputSelect id="date" class="form-control" @bind-Value="@ToDoListEntry.Priority">
                                <option value="Low">Low</option>
                                <option value="Middle">Middle</option>
                                <option value="High">High</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => ToDoListEntry.Priority)" />
                        </div>

                        <div class="form-group">
                            <label for="date">Repeating: </label>
                            <InputSelect id="date" class="form-control" @bind-Value="@ToDoListEntry.RepetitionType">
                                <option value="None">None</option>
                                <option value="Daily">Daily</option>
                                <option value="Weekly">Weekly</option>
                                <option value="TwoWeekly">Two Weekly</option>
                                <option value="Monthly">Monthly</option>
                                <option value="Quarterly">Quarterly</option>
                                <option value="HalfYearly">Half Yearly</option>
                                <option value="Yearly">Yearly</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => ToDoListEntry.Priority)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Description: </label>
                            <InputTextArea id="description" class="form-control" @bind-Value="@ToDoListEntry.Description" rows="5"></InputTextArea>
                            <ValidationMessage For="@(() => ToDoListEntry.Description)" />
                        </div>

                        <div class="form-group">
                            <label for="done">Done: </label>
                            <InputCheckbox id="done" class="form-control" @bind-Value="@ToDoListEntry.Done"></InputCheckbox>
                            <ValidationMessage For="@(() => ToDoListEntry.Done)" />
                        </div>

                        <button type="submit" class="btn btn-primary">Save Task</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
